{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "meson-build",
			"type": "meson",
			"mode": "build",
			"target": "necrowarp:executable",
			"problemMatcher": [
				"$meson-gcc"
			],
			"group": "build",
			"detail": "builds the project in the current configuration"
		},
		{
			"label": "meson-reconfigure-debug-linux",
			"type": "shell",
			"command": "meson",
			"args": [
				"setup",
				"--reconfigure",
				"${workspaceFolder}/build",
				"${workspaceFolder}",
				"--native-file",
				"${workspaceFolder}/native.ini",
				"--cross-file",
				"${workspaceFolder}/cross/x86_64-linux.ini",
				"--buildtype",
				"debug",
				"--wipe"
			],
			"group": "build",
			"detail": "reconfigures the project for building linux debug binaries"
		},
		{
			"label": "meson-reconfigure-debug-windows",
			"type": "shell",
			"command": "meson",
			"args": [
				"setup",
				"--reconfigure",
				"${workspaceFolder}/build",
				"${workspaceFolder}",
				"--native-file",
				"${workspaceFolder}/native.ini",
				"--cross-file",
				"${workspaceFolder}/cross/x86_64-windows.ini",
				"--buildtype",
				"debug",
				"--wipe"
			],
			"group": "build",
			"detail": "reconfigures the project for building windows debug binaries"
		},
		{
			"label": "meson-reconfigure-release-linux",
			"type": "shell",
			"command": "meson",
			"args": [
				"setup",
				"--reconfigure",
				"${workspaceFolder}/build",
				"${workspaceFolder}",
				"--native-file",
				"${workspaceFolder}/native.ini",
				"--cross-file",
				"${workspaceFolder}/cross/x86_64-linux.ini",
				"--buildtype",
				"release",
				"--wipe"
			],
			"group": "build",
			"detail": "reconfigures the project for building linux release binaries"
		},
		{
			"label": "meson-reconfigure-release-windows",
			"type": "shell",
			"command": "meson",
			"args": [
				"setup",
				"--reconfigure",
				"${workspaceFolder}/build",
				"${workspaceFolder}",
				"--native-file",
				"${workspaceFolder}/native.ini",
				"--cross-file",
				"${workspaceFolder}/cross/x86_64-windows.ini",
				"--buildtype",
				"release",
				"--wipe"
			],
			"group": "build",
			"detail": "reconfigures the project for building windows release binaries"
		},
	]
}